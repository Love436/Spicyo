@model Spicyo.Models.Recipes

@{ ViewData["Spicyo"] = "AddItem"; }
@{ Layout = "_Layout3"; }
<br />
<h4>Add Item Detail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for=" Recipe" class="control-label"></label>
                <input asp-for=" Recipe" class="form-control border" />
                <span asp-validation-for=" Recipe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=" RecipeType" class="control-label"></label>
                <input asp-for=" RecipeType" class="form-control border" />
                <span asp-validation-for=" RecipeType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=" Price" class="control-label"></label>
                <input asp-for=" Price" class="form-control border" />
                <span asp-validation-for=" Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Recipe" class="btn btn-primary" />
                <a asp-action="Index" type="button" class="btn btn-warning">Back to List</a>
            </div>
        </form>
    </div>
</div>
