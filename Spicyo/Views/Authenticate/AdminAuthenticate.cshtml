@model Spicyo.Models.Authenticate


@{
    ViewData["RecipeType"] = "AdminAuthenticate";
}

@{ Layout = "_Layout"; }
<br />
<br />
<br />
<h1>Admin Login</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AdminAuthenticate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoginUser" class="control-label"></label>
                <input asp-for="LoginUser" class="form-control border" />
                <span asp-validation-for="LoginUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control border" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sign IN" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


